@model EWBOK_Final_Project.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="~/Content/client/img/slide/book_heart_page_shadow_light_25736_1920x1080.jpg" width="1920" height="300" />
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Fashion</h2>
                <ol class="breadcrumb">
                    <li><a href="/Home">Trang chủ</a></li>
                    <li><a href="/User/Edit">Chỉnh sửa</a></li>
                    <li class="active"><a href="/User/ChangePassword">Đổi mật khẩu</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- product category -->
<section id="aa-product-category">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-8 col-md-push-3">
                <div class="aa-product-catg-content">
                    <div class="aa-product-catg-head">
                    </div>
                    <div class="aa-product-catg-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form class="aa-login-form" action="@Url.Action("ChangePassword","User")" method="post">
                            @Html.LabelFor(x => x.Password)<span>*</span>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            @Html.PasswordFor(x => x.Password, new { placeholder = "Password hiện tại" })
                            @*<input value="@Model.Password" name="Password" type="text" />*@

                            @Html.LabelFor(x => x.NewPassword)<span>*</span>
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                            @Html.PasswordFor(x => x.NewPassword, new { placeholder = "Password mới" })
                            @*<input value="@Model.NewPassword" name="NewPassword" type="text" />*@

                            @Html.LabelFor(x => x.ConfirmNewPassword)<span>*</span>
                            @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
                            @Html.PasswordFor(x => x.ConfirmNewPassword, new { placeholder = "Xác nhận Password mới" })
                            @*<input value="@Model.ConfirmNewPassword" name="ConfirmNewPassword" type="text" />*@

                            <button type="submit" class="aa-browse-btn">Lưu</button>
                        </form>
                        <!-- quick view modal -->
                        <!-- / quick view modal -->
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-4 col-md-pull-9">
            </div>
        </div>
    </div>
</section>
<!-- / product category -->
