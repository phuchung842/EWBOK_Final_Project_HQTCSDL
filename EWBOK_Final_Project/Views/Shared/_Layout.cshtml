@using EWBOK_Final_Project.Common;
@using Model.EF;
@{
    if (Session[Constants.USER_INFO] != null)
    {
        var userinfo = (User)Session[Constants.USER_INFO];
        Session[Constants.WEBSITE_COLOR] = userinfo.ColorWebsite;
    }
    Session[Constants.ERROR_ADMIN] = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EWBOK BookStore | Home</title>
    <!-- Theme color -->
    @if (Session[Constants.WEBSITE_COLOR] != null)
    {
        <link href="~/Content/client/css/theme-color/@Session[Constants.WEBSITE_COLOR]" rel="stylesheet" />
    }
    else
    {
        <link href="~/Content/client/css/theme-color/orange-theme.css" rel="stylesheet" />
    }
    <!-- Font awesome -->
    <link href="~/Content/client/css/font-awesome.css" rel="stylesheet" />
    <!-- Bootstrap -->
    <link href="~/Content/client/css/bootstrap.css" rel="stylesheet" />
    <!-- SmartMenus jQuery Bootstrap Addon CSS -->
    <link href="~/Content/client/css/jquery.smartmenus.bootstrap.css" rel="stylesheet" />
    <!-- Product view slider -->
    <link href="~/Content/client/css/jquery.simpleLens.css" rel="stylesheet" type="text/css" />
    <!-- slick slider -->
    <link href="~/Content/client/css/slick.css" rel="stylesheet" type="text/css" />
    <!-- price picker slider -->
    <link href="~/Content/client/css/nouislider.css" rel="stylesheet" type="text/css" />
    <!-- Top Slider CSS -->
    <link href="~/Content/client/css/sequence-theme.modern-slide-in.css" rel="stylesheet" media="all" />
    <!-- Main style sheet -->
    <link href="~/Content/client/css/style.css" rel="stylesheet" />
    <!--dataTable-->
    <link href="~/Content/admin/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />

    <!-- Google Font -->
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>
<body>
    <!-- wpf loader Two -->
    <div id="wpf-loader-two">
        <div class="wpf-loader-two-inner">
            <span>Loading</span>
        </div>
    </div>
    <!-- / wpf loader Two -->
    <!-- SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>
    <!-- END SCROLL TOP BUTTON -->
    <!-- Start header section -->
    @{ Html.RenderAction("Partial_Header", "Home");}
    <!-- / header section -->
    <!-- menu -->
    @{ Html.RenderAction("Partial_Menu", "Home"); }
    <!-- / menu -->
    @RenderBody()
    <!-- Latest Blog -->
    <!-- / Latest Blog -->
    <!-- Client Brand -->
    <!-- / Client Brand -->
    <!-- Subscribe section -->
    <!-- / Subscribe section -->
    <!-- footer -->
    @{ Html.RenderAction("Partial_Footer", "Home");}
    <!-- / footer -->
    <!-- Login Modal -->
    @{ Html.RenderAction("Partial_Login", "Home");}

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Content/client/js/bootstrap.js"></script>
    <!-- SmartMenus jQuery plugin -->
    <script src="~/Content/client/js/jquery.smartmenus.js"></script>
    <!-- SmartMenus jQuery Bootstrap Addon -->
    <script src="~/Content/client/js/jquery.smartmenus.bootstrap.js"></script>
    <!-- To Slider JS -->
    <script src="~/Content/client/js/sequence.js"></script>
    <script src="~/Content/client/js/sequence-theme.modern-slide-in.js"></script>
    <!-- Product view slider -->
    <script src="~/Content/client/js/jquery.simpleGallery.js"></script>
    <script src="~/Content/client/js/jquery.simpleLens.js"></script>
    <!-- slick slider -->
    <script src="~/Content/client/js/slick.js"></script>
    <!-- Price picker slider -->
    <script src="~/Content/client/js/nouislider.js"></script>
    <!-- Custom js -->
    <script src="~/Content/client/js/custom.js"></script>
    @RenderSection("jsFooter", required: false)
</body>
</html>
