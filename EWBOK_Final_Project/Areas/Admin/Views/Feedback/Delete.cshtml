@model Model.EF.Feedback
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Delete Feedback | <a class="link-property" href="/Admin/Feedback/Index"><i class="fa fa-list text-secondary"></i></a></h1>
</div>
<div class="card-header py-3 border-bottom-xingcheng-light">
    <h3>Are you sure you want to delete this feedback ?</h3>
</div>
<div>
    <br />
    <dl class="dl-horizontal">
        <div class="form-row">
            <div class="form-group col-md-3">
                <dt>
                    <h3>@Html.DisplayNameFor(model => model.CreateDate) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreateDate)
                </dd>
            </div>
            <div class="form-group col-md-3">
                <dt>
                    <h3>@Html.DisplayNameFor(model => model.Name) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <dt>
                    <h3>@Html.DisplayNameFor(model => model.Phone) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Phone)
                </dd>
            </div>
            <div class="form-group col-md-6">
                <dt>
                    <h3>@Html.DisplayNameFor(model => model.Email) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <dt>
                    <h3>@Html.DisplayNameFor(model => model.Address) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <dt>
                    <h3>@Html.DisplayNameFor(model => model.Content) :</h3>
                </dt>

                <dd>
                    <textarea class="form-control" readonly>@Model.Content</textarea>
                </dd>
            </div>
        </div>

    </dl>

    @using (Html.BeginForm("Delete", "Slide", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary btn-user btn-block" />
        </div>
    }
</div>

