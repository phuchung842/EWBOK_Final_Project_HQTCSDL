            <div class="form-group col-md-3">
                <dd>
                    <img src="~/Data/ImgSlide/@Model.Image" height="200" />
                </dd>
            </div>
            <div class="form-group col-md-3">
                <dt>
                    <h3>@Html.DisplayNameFor(model => model.Title) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <dt>
