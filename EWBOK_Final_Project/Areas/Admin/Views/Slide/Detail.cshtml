@model Model.EF.Slide
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        Information Slide
        <a class="link-property" href="/Admin/Slide/Index"><i class="fa fa-list text-secondary"> </i></a>
        <a class="link-property" href="/Admin/Slide/Edit/@Model.ID"><i class="fa fa-edit text-secondary"></i></a>
    </h1>
</div>

