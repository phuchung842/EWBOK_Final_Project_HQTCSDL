    {
        userinfo = (User)Session[Constants.USER_INFO];
    }
    Session[Constants.ERROR_ADMIN] = Constants.ERROR_ADMIN;
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>EWBOK-library</title>

    <!-- Template CSS -->
