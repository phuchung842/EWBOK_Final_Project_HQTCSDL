    <link rel="stylesheet" href="~/Content/admin/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/admin/datatables/dataTables.bootstrap4.min.css" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <!-- google fonts -->
