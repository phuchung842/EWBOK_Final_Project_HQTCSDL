                            <li><a href="/Admin/Rent/WithoutRegis"><i class="fa fa-object-ungroup text-secondary" style="font-size:20px"></i>Without Regis</a></li>
                            <li><a href="/Admin/Rent/WithRegis"><i class="fa fa-object-group text-secondary" style="font-size:20px"></i>With Regis</a></li>
                        </ul>
                    </li>
                    <li class="@Session[Constants.SLIDEBAR_AD_USER].ToString() menu-list">
                        <a href="/Admin/User/Index">
                            <i class="fa fa-user-circle"></i>
                            <span>User<i class="lnr lnr-chevron-right"></i></span>
                        </a>
                        <ul class="sub-menu-list">
                            <li><a href="/Admin/User/Index"><i class="fa fa-users text-secondary" style="font-size:20px"></i>List of User</a></li>
                            <li><a href="/Admin/User/Create"><i class="fa fa-user-plus text-secondary" style="font-size:20px"></i>Add User</a></li>
                        </ul>
                    </li>
                    <li class="@Session[Constants.SLIDEBAR_AD_PRODUCT].ToString() menu-list">
