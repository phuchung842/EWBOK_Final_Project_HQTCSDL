@model List<Model.EF.Feedback>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-comment-o"></i><span class="badge blue">@Model.Count</span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <div class="notification_header">
                <h3>You have @Model.Count new feedback</h3>
            </div>
        </li>
        @for (int i = 0; i < Model.Count; i++)
        {
            <li>
                <a href="/Admin/Feedback/Detail/@Model[i].ID" class="grid">
                    <div class="user_img"><img src="~/Data/ImgAdmin/computer-icons-user-profile-login-my-account-icon-png-clip-art.png" /></div>
                    <div class="notification_desc">
                        @if (Model[i].Content.Count() > 20)
                        {
                            <p>@Model[i].Content.ToString().Substring(0, 20) ...</p>
                        }
                        else
                        {
                            <p>@Model[i].Content.ToString()</p>
                        }
                        <span>@Model[i].Name.ToString()</span>
                    </div>
                </a>
            </li>
        }
        <li>
            <div class="notification_bottom">
                <a href="/Admin/Feedback/" class="bg-primary">See all feedback</a>
            </div>
        </li>
    </ul>
</li>
