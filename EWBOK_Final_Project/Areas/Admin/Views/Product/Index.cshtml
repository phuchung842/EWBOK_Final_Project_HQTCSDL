@model List<Model.EF.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section jsFooter{
    <script src="~/Content/admin/js/controller/productController.js"></script>
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-2 text-gray-800">
        Product | <a class="link-property" href="/Admin/Product/Create"><i class="fa fa-plus-square text-secondary"></i></a>
    </h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-light border-bottom-0">
        <h6 class="m-0 font-weight-bold text-primary">Product Information</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Function</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Promotion Price</th>
                        <th>Quantity</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Function</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Promotion Price</th>
                        <th>Quantity</th>
                        <th>Status</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.Quantity < 50)
                        {
                            <tr>
                                <td>
                                    <a class="link-property" href="/Admin/Product/Edit/@item.ID"><i class="fa fa-edit" style="font-size:20px; "></i></a>
                                    <a class="link-property" href="/Admin/Product/Detail/@item.ID"><i class="fa fa-newspaper-o" style="font-size:20px;"></i></a>
                                    <a class="link-property" href="/Admin/Product/Delete/@item.ID"><i class="fa fa-close" style="font-size:20px"></i></a>
                                </td>
                                <td><img src="~/Data/ImgProduct/@item.Image" width="100" height="150" /></td>
                                <td><strong class="text-danger">@item.Name</strong></td>
                                <td><strong class="text-danger">@item.Price</strong></td>
                                <td><strong class="text-danger">@item.PromotionPrice</strong></td>
                                <td><strong class="text-danger">@item.Quantity</strong></td>
                                <td>
                                    <a href="#" class="btn-active" data-id="@item.ID">
                                        @if (item.Status == false)
                                        {
                                            <i class="fa fa-lock"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-check"></i>
                                        }
                                    </a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>
                                    <a class="link-property" href="/Admin/Product/Edit/@item.ID"><i class="fa fa-edit" style="font-size:20px; "></i></a>
                                    <a class="link-property" href="/Admin/Product/Detail/@item.ID"><i class="fa fa-newspaper-o" style="font-size:20px;"></i></a>
                                    <a class="link-property" href="/Admin/Product/Delete/@item.ID"><i class="fa fa-close" style="font-size:20px"></i></a>
                                </td>
                                <td><img src="~/Data/ImgProduct/@item.Image" width="100" height="150" /></td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.PromotionPrice</td>
                                <td>@item.Quantity</td>
                                <td>
                                    <a href="#" class="btn-active" data-id="@item.ID">
                                        @if (item.Status == false)
                                        {
                                            <i class="fa fa-lock"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-check"></i>
                                        }
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

