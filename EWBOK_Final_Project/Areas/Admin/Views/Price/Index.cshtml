@model List<Model.EF.Price>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-2 text-gray-800">
        Price
    </h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-light border-bottom-0">
        <h6 class="m-0 font-weight-bold text-primary">Price Information</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Function</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>PromotionPrice</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Function</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>PromotionPrice</th>
                        <th>Status</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a class="link-property" href="/Admin/Price/Detail/@item.ID"><i class="fa fa-newspaper-o" style="font-size:20px;"></i></a>
                                <a class="link-property" href="/Admin/Price/Delete/@item.ID"><i class="fa fa-close" style="font-size:20px"></i></a>
                            </td>
                            <td>@item.Name</td>
                            <td>@item.PriceValue</td>
                            <td>@item.PromotionPrice</td>
                            <td>
                                @if (@item.Status == false)
                                {
                                    <i class="fa fa-lock"></i>
                                }
                                else
                                {
                                    <i class="fa fa-check"></i>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

