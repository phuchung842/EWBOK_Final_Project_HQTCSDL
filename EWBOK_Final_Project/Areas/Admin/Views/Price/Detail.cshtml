                <dt>
                    <h3>@Html.DisplayNameFor(model => model.CreateDate) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreateDate)
                </dd>
            </div>
            <div class="form-group col-md-6">
                <dt>
                    <h3>@Html.DisplayNameFor(model => model.CreatedBy) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreatedBy)
                </dd>
            </div>
        </div>
        <dt>
            <h3>@Html.DisplayNameFor(model => model.Status)</h3>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
