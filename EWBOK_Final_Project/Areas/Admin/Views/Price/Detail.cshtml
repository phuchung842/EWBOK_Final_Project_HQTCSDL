                <dt>
                    <h3>@Html.DisplayNameFor(model => model.Name) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </div>
            <div class="form-group col-md-6">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <dt>
                    <h3>@Html.DisplayNameFor(model => model.PriceValue) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PriceValue)
                </dd>
            </div>
            <div class="form-group col-md-6">
                <dt>
                    <h3>@Html.DisplayNameFor(model => model.PromotionPrice) :</h3>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PromotionPrice)
                </dd>

            </div>
        </div>
        <div class="form-row">
