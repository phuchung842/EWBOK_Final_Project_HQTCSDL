    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        Information Price
        <a class="link-property" href="/Admin/Price/Index"><i class="fa fa-list text-secondary"> </i></a>
        <a class="link-property" href="/Admin/Price/Edit/@Model.ID"><i class="fa fa-edit text-secondary"></i></a>
    </h1>
</div>
<div>
    <br />
    <dl class="dl-horizontal">
